{
	"id": "com.koktail.beacon",
	"version": "1.0.2",
	"compatibility": ">=1.5.8",
	"sdk": 2,
	"brandColor": "#11437c",
	"name": {
		"en": "Beacon"
	},
	"description": {
		"en": "Adds support for BLE beacons"
	},
	"category": [
		"localization"
	],
	"permissions": [],
	"images": {
		"large": "/assets/images/large.png",
		"small": "/assets/images/small.png"
	},
	"author": {
		"name": "Leendert De Kok",
		"email": "koktaildotcom@hotmail.com"
	},
	"contributing": {
		"donate": {
			"paypal": {
				"username": "koktaildotcom"
			}
		}
	},
	"capabilities": {
		"detect": {
			"type": "boolean",
			"title": {
				"en": "Detected",
				"nl": "Gedetecteerd"
			},
			"getable": true,
			"setable": true
		}
	},
	"drivers": [
		{
			"id": "NRF51822",
			"name": {
				"en": "NRF51822",
				"nl": "NRF51822"
			},
			"class": "sensor",
			"capabilities": [
				"detect"
			],
			"images": {
				"small": "drivers/NRF51822/assets/images/small.png",
				"large": "drivers/NRF51822/assets/images/large.png"
			},
			"pair": [
				{
					"id": "list_devices",
					"template": "list_devices",
					"navigation": {
						"next": "add"
					}
				},
				{
					"id": "add",
					"template": "add_devices"
				}
			],
			"mobile": {
				"components": [
					{
						"id": "icon"
					},
					{
						"id": "sensor",
						"capabilities": [
							"detect"
						],
						"options": {
							"icons": {
								"detect": "/assets/detect.svg"
							}
						}
					}
				]
			}
		},
		{
			"id": "RDL51822",
			"name": {
				"en": "RDL51822",
				"nl": "RDL51822"
			},
			"class": "sensor",
			"capabilities": [
				"detect"
			],
			"images": {
				"small": "drivers/RDL51822/assets/images/small.png",
				"large": "drivers/RDL51822/assets/images/large.png"
			},
			"pair": [
				{
					"id": "list_devices",
					"template": "list_devices",
					"navigation": {
						"next": "add"
					}
				},
				{
					"id": "add",
					"template": "add_devices"
				}
			],
			"mobile": {
				"components": [
					{
						"id": "icon"
					},
					{
						"id": "sensor",
						"capabilities": [
							"detect"
						],
						"options": {
							"icons": {
								"detect": "/assets/detect.svg"
							}
						}
					}
				]
			}
		}
	],
	"flow": {
		"triggers": [
			{
				"id": "beacon_inside_range",
				"title": {
					"en": "The beacon is detected",
					"nl": "Het baken is gedetecteerd"
				},
				"tokens": [
					{
						"name": "beacon",
						"title": {
							"en": "beacon",
							"nl": "baken"
						},
						"example": {
							"en": "Beacon 1",
							"nl": "Baken 1"
						}
					}
				]
			},
			{
				"id": "beacon_outside_range",
				"title": {
					"en": "The beacon is undetected",
					"nl": "Het baken is ongedetecteerd"
				},
				"tokens": [
					{
						"name": "beacon",
						"title": {
							"en": "beacon",
							"nl": "baken"
						},
						"example": {
							"en": "Beacon 1",
							"nl": "Baken 1"
						}
					}
				]
			},
			{
				"id": "device_beacon_inside_range",
				"title": {
					"en": "A beacon is detected",
					"nl": "Een baken is gedetecteerd"
				},
				"tokens": [
					{
						"name": "beacon",
						"title": {
							"en": "beacon",
							"nl": "baken"
						},
						"example": {
							"en": "Beacon 1",
							"nl": "Baken 1"
						}
					}
				],
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=NRF51822|RDL51822"
					}
				]
			},
			{
				"id": "device_beacon_outside_range",
				"title": {
					"en": "A beacon is undetected",
					"nl": "Een baken is ongedetecteerd"
				},
				"tokens": [
					{
						"name": "beacon",
						"title": {
							"en": "beacon",
							"nl": "baken"
						},
						"example": {
							"en": "Beacon 1",
							"nl": "Baken 1"
						}
					}
				],
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=NRF51822|RDL51822"
					}
				]
			},
			{
				"id": "beacon_discovered",
				"title": {
					"en": "A beacon has been discovered",
					"nl": "Een baken is ontdekt"
				},
				"tokens": [
					{
						"name": "beacon",
						"title": {
							"en": "beacon",
							"nl": "baken"
						},
						"example": {
							"en": "Beacon 1",
							"nl": "Baken 1"
						}
					}
				]
			}
		]
	}
}